{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/spa",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/[...path].ts": {
      "src": "netlify/functions/api.ts"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
